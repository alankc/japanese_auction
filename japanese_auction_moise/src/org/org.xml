<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
    id="japanese_auction_moise"
    os-version="0.8"

    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >

	<structural-specification>
	
		<role-definitions>
		    <role id="seller" />
		    <role id="buyer" />
		</role-definitions>
		
		<group-specification id="auction_group">
		    <roles>
		        <role id="seller" min="1" max="1"/>
		        <role id="buyer" min="3" max="100"/>
		    </roles>
		</group-specification>
		
	</structural-specification>
	
	<functional-specification>
	    <scheme id="auction_room">
	        
	        <goal id="auction_item">
	            <plan operator="sequence">
	            	<goal id="sync"/>
	                <goal id="enter_auction">
                        <argument id="auction_room_name" />
                        <argument id="item_name" />
                        <argument id="item_price" />
                    </goal>
                    <goal id="start_auction">
                        <argument id="auction_room_name" />
                    </goal>
	                <goal id="set_winner">
                        <argument id="auction_room_name" />
                    </goal>
	                <goal id="pay_seller">
                        <argument id="auction_room_name" />
                    </goal>
	                <goal id="dispose_auction_room">
                        <argument id="auction_room_name" />
                    </goal>
	            </plan>
	        </goal>
	
	        <mission id="mSell" min="1" max="1">
	        	<goal id="sync"/>
	            <goal id="start_auction"/>
	            <goal id="set_winner"/>
	            <goal id="dispose_auction_room"/>
	        </mission>
	        
	        <mission id="mEnter" min="1" max="100">
	            <goal id="enter_auction"/>
	        </mission>
	        
	        <mission id="mPay" min="1" max="100">
	            <goal id="pay_seller"/>
	        </mission>
	        
	    </scheme>
	</functional-specification>
	
	<normative-specification>
	    <!-- the norms of the application -->
	    <norm id="n1" type="obligation" role="seller" mission="mSell"/>
	    <norm id="n2" type="obligation" role="buyer" mission="mEnter"/>
	    <norm id="n3" type="obligation" role="buyer" mission="mPay"/>
	</normative-specification>

</organisational-specification>
